<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaperregistro2"
    android:id="@+id/activity_registro_equipo"
    android:baselineAligned="false"
    android:gravity="center"
    android:layout_centerInParent="true"
   >

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:id="@+id/email"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:textColor="@color/colorLetrasLogin"
        android:hint="Email"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="Maquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:id="@+id/maquina"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:ems="10"
        android:id="@+id/editTextMaquina"
        android:hint="Maquina"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:text="Numero Equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:id="@+id/numeroEquipo"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:ems="10"
        android:id="@+id/editTextId_equipo"
        android:hint="Numero Equipo"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:text="Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:id="@+id/estado"
        android:layout_marginBottom="10dp"/>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorLetrasLogin"
        android:ems="10"
        android:id="@+id/editTextEstado"
        android:hint="Estado"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:text="Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:foregroundGravity="bottom"
        android:id="@+id/buttonRegistrar"
        android:layout_marginBottom="10dp"
        />



</LinearLayout>